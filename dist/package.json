{
  "name": "autoversion-action",
  "version": "1.1.0",
  "description": "GitHub Action to automatically tag and version software using semantic versioning",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test": "jest --coverage",
    "test:cucumber": "cucumber-js",
    "test:all": "npm run test && npm run test:cucumber",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js"
  },
  "keywords": [
    "github-action",
    "versioning",
    "semantic-versioning",
    "tagging"
  ],
  "author": "VlinderSoftware",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.38.0",
    "jest": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 45,
        "functions": 100,
        "lines": 63,
        "statements": 63
      }
    }
  }
}
